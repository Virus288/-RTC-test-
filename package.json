{
  "name": "mysterious-crawler",
  "version": "0.1.1",
  "description": "Api crawler, used to get sport related data",
  "productName": "mysterious-crawler",
  "author": "https://github.com/Virus288",
  "license": "UNLICENCED",
  "private": false,
  "main": "dist/src/index.js",
  "scripts": {
    "start": "node dist/src/index.js",
    "start:dev": "concurrently 'npm run build:watch' 'cross-env NODE_ENV=development nodemon dist/src/index.js'",
    "build": "tsc -p tsconfig.build.json",
    "build:watch": "tsc -w -p tsconfig.build.json",
    "lint": "cross-env NODE_ENV=development eslint -c eslint.config.mjs . --fix --cache",
    "listErrors": "node_modules/.bin/tsc --skipLibCheck",
    "lintStaged": "npx lint-staged",
    "test": "vitest run --coverage --config ./test/config.ts"
  },
  "lint-staged": {
    "*.ts": [
      "cross-env NODE_ENV=development eslint --cache"
    ],
    "*.json,.{eslintrc,prettierrc}": [
      "prettier --ignore-path .eslintignore --parser json --write"
    ]
  },
  "dependencies": {
    "cors": "2.8.5",
    "express": "5.1.0",
    "express-rate-limit": "7.5.0",
    "helmet": "^8.0.0",
    "swagger-jsdoc": "6.2.8",
    "swagger-ui-express": "5.0.1"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.2",
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.9.0",
    "@types/cors": "2.8.18",
    "@types/express": "5.0.1",
    "@types/node": "22.15.17",
    "@types/supertest": "6.0.3",
    "@types/swagger-jsdoc": "6.0.4",
    "@types/swagger-ui-express": "4.1.8",
    "@typescript-eslint/eslint-plugin": "8.32.1",
    "@typescript-eslint/parser": "8.32.1",
    "@vitest/coverage-v8": "^3.1.4",
    "concurrently": "9.1.2",
    "cross-env": "7.0.3",
    "eslint": "9.27.0",
    "eslint-config-prettier": "10.1.5",
    "eslint-plugin-check-file": "3.2.0",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-jest": "28.11.0",
    "eslint-plugin-jsdoc": "^50.0.0",
    "eslint-plugin-prettier": "5.4.0",
    "eslint-plugin-sort-class-members": "1.21.0",
    "nodemon": "3.1.10",
    "prettier": "3.5.3",
    "supertest": "^7.1.1",
    "typescript": "5.8.3",
    "vitest": "^3.1.3"
  },
  "keywords": [],
  "engines": {
    "node": ">=19"
  }
}
